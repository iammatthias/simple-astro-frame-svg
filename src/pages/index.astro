---
const title = import.meta.env.PUBLIC_TITLE;
const url = import.meta.env.PUBLIC_URL;
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <title>{title}</title>
    <meta property='og:title' content={title} />
    <meta property='og:image' content='https://placehold.co/1200x630' />

    <meta property='fc:frame' content='vNext' />

    <meta
      property='fc:frame:image'
      content='data:image/svg+xml;base64,'
    />
    <meta property='fc:frame:button:1' content='Button 1' />
    <!-- Add more buttons as needed -->
    <meta property='fc:frame:post_url' content={url + `/api/handleFrameClick`} />
  </head>

  <body>
    <h1>Simple Astro Frame With SVG</h1>
    <p>A simple Farcaster Frame built with Astro</p>
  </body>
</html>
